{
  "manifest_version": 3,
  "name": "Shopify Tab",
  "description": "Shows latest Shopify development videos in new tab",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://www.youtube.com/*",
    "https://*.ytimg.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "action": {
    "default_title": "Shopify Tab"
  }
}